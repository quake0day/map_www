                     MINIMUM DISTANCE =   952.795  KILOMETRES
                     MAXIMUM DISTANCE =   953.795  KILOMETRES
                     DSTEP            =    10.000  KILOMETRES


                     FREQUENCY =  900.000 MHZ

                     TRANSMITTER HEIGHT =    42.6  METRES
                     RECIEVER HEIGHT    =  1081.9  METRES

